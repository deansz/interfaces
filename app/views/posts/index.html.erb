
  <h1>your thoughts</h1>
  <div><%= link_to 'New post', new_post_path %>
    
<div id="outer">
 <!-- the 'your thoughts' bit would be nice as a png in blue font-->



<% @posts.each do |post| %>
      <div class="inner">
        <div class="posttitle"><%= post.title %><br></div>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
                      method: :delete, data: { confirm: 'Do you really want to delete this?' } %><hr>
      <%= post.text %>
        </div>
    <% end %>
  </div>

</div>
	<script>
		$(function(){
			$("#outer").mason({
				itemSelector: ".inner",
				ratio: 2,
				sizes: [
					[1,1],
					[1,2],
					[2,2]
				],
				layout: 'fluid',
				gutter: 10
			});
		});
		</script>