<h1>Listing posts</h1>
<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
 
  </tr>
 
  
  <% @posts.in_groups_of(3) do |group| %>
    <% group.compact.each do |post| %>
      <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
                      method: :delete, data: { confirm: 'Do you for reals wanna delete this?' } %></td>
    </tr>
      </div>
    <% end %>
  </div>
<% end %>
</table>