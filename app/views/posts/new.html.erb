<h1>New Post</h1>

<%= form_for :post do |f| %>
  <p>
    <%= f.label :"your name" %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :"your thoughts" %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', posts_path %>